<h2>Search Index</h2>
<form action="/books" method="get">
    <div>
        <label>Title</label>
        <input type="text" name="title">
    </div>
    <div>
        <label for="">Published After</label>
        <input type="date" name="publishedAfter">
    </div>
    <div>
        <label for="">Published Before</label>
        <input type="date" name="publishedBefore">
    </div>
    <button type="submit">Search</button>
</form>
<div>
    <% books.forEach(book => { %>
        <img height="150" width="100" src="<%= book.coverImagePath%>">
    <% }) %>
</div>